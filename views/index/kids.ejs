
<div id="chartPieRev"></div>
<div id="chartPiePri"></div>


<div id="chartTreeType"></div>

<!-- PIE CHARTS -->
<!--PIE rev x cat -->
<script type="text/javascript">
  var series = JSON.parse(`<%- pieAvgReview %>`)
  var labels = JSON.parse(`<%- pieRevCategories %>`)

  var options = {
      series: series,
      chart: {
          type: 'donut'
      },
      title: { text: 'Média de Reviews por Categoria' },
      legend: {
          show: true,
          position: 'bottom'
      },
      labels: labels,
      responsive: [
          {
              breakpoint: 1680,
              options: {
                  chart: {
                      width: '100%',
                      height: '75%'
                  },
                  legend: {
                      show: false
                  }
              }
          }
      ]
  };

  var chartPieRev = new ApexCharts(document.querySelector("#chartPieRev"), options);
  chartPieRev.render();
    
    
</script>

