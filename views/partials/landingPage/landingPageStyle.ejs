<style type="text/css">
    body {
        overflow: hidden;
    }

    a, a:hover, a:focus, a:active {
        text-decoration: none;
        color: inherit;
    }

    @font-face {
        font-family: 'Bookerly';
        src: url(/public/fonts/Bookerly-Regular.ttf) format("truetype");
    }

    @font-face {
        font-family: 'Bookerly-Italic';
        src: url(/public/fonts/Bookerly-Italic.ttf) format("truetype");
    }

    @font-face {
        font-family: 'Bookerly-Bold';
        src: url(/public/fonts/Bookerly-Bold.ttf) format("truetype");
    }

    @font-face {
        font-family: 'Bookerly-BoldItalic';
        src: url(/public/fonts/Bookerly-BoldItalic.ttf) format("truetype");
    }

    :root {
        --backView-left--width: 25%;
        --slider--width: 420px;
        --slider-height: 420px;
        --img-counter: 4;
    }

    .landingContent {
        width: 100vw;
        height: 100vh;
    }

    .backView {
        width: inherit;
        height: inherit;
        display: flex;
        z-index: -9999;
    }

    .backView-left {
        position: relative;
        width: var(--backView-left--width);
        background: linear-gradient(0deg, rgba(19,25,33,1) 2.5%, rgba(35,47,62,1) 50%, rgba(19,25,33,1) 97.5%);
    }

    .backView-left h1 {
        color: #fff;
        text-align: center;
        margin-top: 1em;
        font-family: var(--font-theme);
        text-shadow: 1.5px 2px 2px var(--color-darkerPrimary);
        font-size: 1.25rem;
    }

    .backView-right {
        position: relative;
        width: calc(100% - var(--backView-left--width));
        /* background: linear-gradient(90deg, rgba(255,153,0,1) 5%, rgba(255,174,0,1) 50%, rgba(255,153,0,1) 95%); */
        background: linear-gradient(90deg, rgba(252,252,252,1) 2.5%, rgba(242,242,242,1) 50%, rgba(252,252,252,1) 97.5%);
        /* background-color: var(--color-lightTerciary); */
        -webkit-box-shadow: -10px 0px 10px 0px rgba(15,17,17, 0.75);
        -moz-box-shadow: -10px 0px 10px 0px rgba(15,17,17, 0.75);
        box-shadow: -10px 0px 10px 0px rgba(15,17,17, 0.75);
    }

    .backView-right-top {
        height: 75%;
        display: grid;
        place-items: center;
    }

    .animated {
        width: 50%;
        margin-left: 25%;
    }

    .mktTxt-mid p {
        font-family: 'Bookerly-BoldItalic';
        font-size: 1.15rem;
        line-height: 1.75rem;
        text-align: end;
        margin-right: 3.75rem;
    }

    .mktTxt-mid p::before, .mktTxt-mid p::after {
        font-size: 2em;
    }

    .mktTxt-mid p::before {
        content: '\201C';
    }

    .mktTxt-mid p::after {
        content: '\201D';
    }

    .mktTxt-bot {
        text-align: right;
        margin-right: 4.25em;
    }

    .mktTxt-bot sub {
        font-family: 'Bookerly';
    }

    .backView-right-mid {
        height: 15%;
        display: flex;
    }

    .leftBar {
        width: 20%;
    }

    .rightBar {
        width: 80%;
        background: linear-gradient(90deg, rgba(19,25,33,1) 2.5%, rgba(35,47,62,1) 50%, rgba(19,25,33,1) 97.5%);
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
        -webkit-box-shadow: -2.5px 2.5px 5px 0px rgba(15,17,17,1);
        -moz-box-shadow: -2.5px 2.5px 5px 0px rgba(15,17,17,1);
        box-shadow: -2.5px 2.5px 5px 0px rgba(15,17,17,1);
        padding: 12px;
        display: flex;
        justify-content: center;
    }
    
    .buttonIcon {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .buttonAnchor {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-align-self: center;
        -ms-flex-item-align: center;
        align-self: center;
        text-decoration: none;
        cursor: pointer;
        background-color: transparent;
        border: 4px solid var(--color-secundary);
        border-radius: 4px;
        color: var(--color-darkPrimary);
        padding: 16px;
        border-color: var(--color-secundary);
        box-shadow: 0 0 40px 40px var(--color-secundary) inset, 0 0 0 0 var(--color-secundary), 10px 10px 5px 0px rgba(15,17,17,0.75);
        -webkit-transition: all 140ms ease-in-out;
        transition: all 140ms ease-in-out;
        text-transform: uppercase;
    }

    .buttonAnchor:hover, .buttonAnchor:focus {
      color: #fff;
      border-radius: 0;
      outline: 0;
      box-shadow: 0 0 7.25px 0 var(--color-secundary) inset, 0 0 5px 4px var(--color-secundary);
      border-radius: 4px;
    }

    .buttonAnchorSpan {
        display: none;
    }

    .buttonImg {
        position: absolute;
        right: 0;
        display: flex;
        align-self: center;
    }

    .buttonImg img {
        width: 150px;
        height: 100px;
    }

    .backView-right-bot {
        height: 10%;
    }

    .frontView {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 50vw;
        height: 100vh;
        z-index: 9999;
        margin: 0;
    }

    .frontView-carrousel {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .frontViewSlider {
        width: var(--slider--width);
        height: var(--slider-height);
        overflow: hidden;
        border-radius: 50%;
        -webkit-box-shadow: 5px 0px 10px 0px rgba(15,17,17,0.5);
        -moz-box-shadow: 5px 0px 10px 0px rgba(15,17,17,0.5);
        box-shadow: 5px 0px 10px 0px rgba(15,17,17,0.5);
        /* animation: scroll 4s linear infinite; */
    }
    
    /* @keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(calc(-1 * calc(var(--slider--width) * calc(var(--img-counter) / 2))));
        }
    } */

    .carrousel {
        width: calc(var(--slider--width) * var(--img-counter));
        height: var(--slider-height);
        display: flex;
    }

    .carrouselImg img {
        max-width: var(--slider--width);
        max-height: var(--slider-height);
    }

    @media only screen and (min-width: 1600px) {
        :root {
            --slider--width: 540px;
            --slider-height: 540px;
        }

        .backView-left h1 {
            font-size: 1.75rem;
        }

        .mktTxt-mid p {
            font-size: 1.5rem;
            line-height: 2.25rem;
            margin-right: 5rem;
        }

        .mktTxt-mid p::before, .mktTxt-mid p::after {
            font-size: 2.5em;
        }

        .mktTxt-bot sub {
            font-size: 1rem;
        }
        
        .buttonAnchorSpan {
            display: block;
        }

        .buttonImg {
            margin-right: 1.15em;
        }
    }

    @media only screen and (min-width: 1600px) and (max-height: 768px) {
        :root {
            --slider--width: 420px;
            --slider-height: 420px;
        }
    }

    @media only screen and (min-width: 1920px) {
        :root {
            --slider--width: 686px;
            --slider-height: 686px;
        }

        .backView-left h1 {
            font-size: 2rem;
        }

        .mktTxt-mid p {
            font-size: 1.75rem;
            line-height: 2.85rem;
            margin-right: 10rem;
        }

        .mktTxt-mid p::before, .mktTxt-mid p::after {
            font-size: 2.75em;
        }

        .mktTxt-bot {
            margin-right: 10em;
        }

        .mktTxt-bot sub {
            font-size: 1.25rem;
        }
        
        .buttonAnchorSpan {
            display: block;
        }

        .buttonImg {
            margin-right: 1.15em;
        }
    }
</style>