		<script>
			{
				const miniClass = "sidebar--mini";
				const menuToggle = document.querySelector(".sidebar");
				const itemToggle = document.querySelector(".sidebar-toggle");
				const localStgKey = "menuToggled";

				if(localStorage.getItem(localStgKey) === "true") {
					menuToggle.classList.add(miniClass);
				}

				const toggleFunction = itemToggle.addEventListener("click", () => {
